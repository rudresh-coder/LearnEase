{
    "manifest_version": 3,
    "name": "LearnEase",
    "description": "Smart Student Toolkit: Word Counter, Timers, Focus Blocker, Journal & more.",
    "version": "1.0.0",
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/LearnEaseicon16.png",
        "32": "icons/LearnEaseicon32.png",
        "48": "icons/LearnEaseicon48.png",
        "128": "icons/LearnEaseLogo128.png"
      }
    },
    "icons": {
      "16": "icons/LearnEaseicon16.png",
      "32": "icons/LearnEaseicon32.png",
      "48": "icons/LearnEaseicon48.png",
      "128": "icons/LearnEaseLogo128.png"
    },
    "permissions": ["storage", "activeTab", "scripting", "alarms", "declarativeNetRequest", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
}